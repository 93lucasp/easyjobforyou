<h1>Crea un nuovo task</h1>

<%= form_for :task, url: {action: "create"} do |f| %>

	<%= f.label :stato %><br>
	<%= f.select :stato, [['DA FARE','DA FARE'],['IN LAVORAZIONE','IN LAVORAZIONE'],['FATTO','FATTO']] %><br>
	
	<%= f.label :chi %><br>
	<%= f.select :chi, [['IO','IO'],['ROMANIA','ROMANIA'],['INDIA','INDIA'],['ORGANIZZAZIONE','ORGANIZZAZIONE']] %><br>
	
	<%= f.label :note %><br>
	<%= f.text_area :note %><br>

	<%= f.submit "Aggiungi", class: "aggiungi" %>
	<%= link_to 'Back', tasks_path %>
<% end %>