<h1>Task a Scadenza</h1>

<%= form_tag(waits_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Ricerca per Note o Chi", class: "search" %>
  <%= submit_tag "Search", class: "aggiungi" %>
<% end %>

<table>
  <tr>
    <th>Apertura</th>
    <th>Scadenza</th>
    <th>Stato</th>
    <th>Chi</th>
    <th colspan="2">Note</th>
  </tr>

  <% @wait.each do |t| %>
    <tr>
      <td><%= t.data_apertura %></td>
      <td><%= t.data_scadenza %></td>
      <td><%= t.stato %></td>
      <td><%= t.chi %></td>
      <td><%= t.note %></td>
      <td><%= link_to 'Modifica', edit_wait_path(t) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Nuovo Task', new_wait_path%>
<%= link_to 'Tutti i Task', tasks_path %>
<%= link_to 'Task Fatti', archived_tasks_path %>